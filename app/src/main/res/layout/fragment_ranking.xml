<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".rank_fragment">

    <!-- Fixed Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Study Statistic"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/white"
        android:elevation="4dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Rank Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/rankCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Rank Badge -->
                    <ImageView
                        android:id="@+id/rankBadge"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_person_black"
                        android:contentDescription="Rank badge" />

                    <!-- Rank Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/timeStudyToday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Study Today: 0h"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/expToday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exp Today: 0"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <!-- Progress Bar for Rank Level -->
                        <ProgressBar
                            android:id="@+id/rankProgress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="8dp"
                            android:progress="40"
                            android:max="100"
                            android:progressTint="@android:color/holo_red_dark" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Weekly Recap Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/weeklyRecapCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/weeklyRecapTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Recap"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <!-- Placeholder for Bar Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/weeklyBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Course Statistics Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/courseStatCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/courseStatTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Course 1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <!-- Placeholder for Bar Chart -->
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/courseBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/courseHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click for suggestion on future exam"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
