<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".setting_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/backgroundBar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/red">
            
            
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_black"
                android:background="@color/white"
                app:shapeAppearanceOverlay="@style/ImageStyle_Circle"
                android:layout_marginVertical="15dp"
                android:layout_centerHorizontal="true"/>

            <!--add user name using database -->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TonySama"
                android:layout_below="@+id/profileImage"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <!-- Adding  info section to show username, email, date joined and total time study -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/userNameLableProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="User name" />

            <TextView
                android:id="@+id/userNameProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="TonySama" />

            <TextView
                android:id="@+id/userEmailLableProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userNameLableProfile"
                android:layout_marginTop="20dp"
                android:text="Email" />

            <TextView
                android:id="@+id/userEmailProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userNameProfile"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="sample@gmail.com" />


            <TextView
                android:id="@+id/dateJonedLableProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userEmailLableProfile"
                android:layout_marginTop="20dp"
                android:text="Date Joined" />

            <TextView
                android:id="@+id/dateJonedProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userEmailProfile"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="MM/DD/YYYY" />

            <TextView
                android:id="@+id/totalHourStudyLableProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateJonedLableProfile"
                android:layout_marginTop="20dp"
                android:text="Total Time Studied" />

            <TextView
                android:id="@+id/totalHourStudyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateJonedProfile"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:text="00:00:00" />
            <!-- Button section for editing profile, log out,  about us -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalHourStudyLableProfile"
                android:layout_marginTop="30dp"
                android:orientation="vertical">


                <!-- cardView for editing username -->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/editUserNameCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person_black"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Edit User Name"/>

                </com.google.android.material.card.MaterialCardView>

                <!-- cardView for editing password -->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/editPasswordCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_lock_password"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Update Password"/>

                </com.google.android.material.card.MaterialCardView>
                <!-- cardView for about us section -->

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/aboutUsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_question_mark"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="About Us"/>

                </com.google.android.material.card.MaterialCardView>
                <!-- cardView for sign out -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/signOutCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp"
                    app:contentPadding="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_power_button"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Log Out"/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>